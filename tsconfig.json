{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "src",
    "esModuleInterop": true,
    "paths": {
      "pages/*": [
        "pages/*"
      ],
      "components/*": [
        "components/*"
      ],
      "store/*": [
        "store/*"
      ],
      "actions/*": [
        "store/actions/*"
      ],
      "reducers/*": [
        "store/reducers/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "lib/*": [
        "lib/*"
      ]
    },
    "typeRoots": [
      "types",
      "../node_modules/@types",
      "../node_modules/moment/"
    ]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../public"
  ]
}