{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "src",
    "esModuleInterop": true,
    "paths": {
      "pages/*": ["pages/*"],
      "components/*": ["components/*"],
      "actions/*": ["actions/*"],
      "reducers/*": ["reducers/*"],
      "utils/*": ["utils/*"],
    }
  },
  "exclude": [
    "**/*.test.*",
    "**/*.spec.*",
    "node_modules",
    "dist",
    "public"
  ]
}